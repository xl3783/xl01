# TOS服务器环境配置

# 服务器配置
PORT=3000
NODE_ENV=development

# 日志配置
LOG_LEVEL=info

# 安全配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 数据库配置（未来扩展）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tos_db
DB_USER=tos_user
DB_PASSWORD=tos_password

# Redis配置（未来扩展）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置（未来扩展）
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# 文件上传配置
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# 邮件配置（未来扩展）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password 